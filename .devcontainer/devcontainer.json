{
	"name": "Kraken2",
	"dockerFile": "Dockerfile",
	"mounts": [
		{
			"type": "volume",
			"source": "vcpkg-binarycache",
			"target": "/root/.cache/vcpkg/archives"
		},
		{
			"type": "volume",
			"source": "vcpkg-downloads",
			"target": "/opt/vcpkg/downloads"
		}
	],
	"remoteEnv": {
		"PATH": "${containerEnv:PATH}:/workspaces/kraken2/build/src"
	},
	"customizations": {
		"vscode": {
			"settings": {},
			"extensions": [
				"twxs.cmake",
				"microsoft.cmaketools",
				"ms-vscode.cpptools",
				"ms-vscode.cpptools-extension-pack",
				"fredericbonnet.cmake-test-adapter",
				"ms-vscode.cmake-tools",
				"jmfirth.vsc-space-block-jumper"
			]
		}
	},
	// fix line endings when working on windows host 
	// "postAttachCommand": "apt install -y dos2unix && find ${workspaceFolder} -type f -exec dos2unix {} \\; && apt remove -y dos2unix"
}
